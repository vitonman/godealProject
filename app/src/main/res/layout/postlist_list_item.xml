<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shimmer_view_container">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_post_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/post_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="name+last"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/user_post_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/post_city_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="City: "
        app:layout_constraintStart_toEndOf="@+id/user_post_image"
        app:layout_constraintTop_toBottomOf="@+id/post_name_text" />


    <TextView
        android:id="@+id/abilities_post"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="12dp"
        android:text="Abilities: "
        app:layout_constraintStart_toEndOf="@+id/user_post_image"
        app:layout_constraintTop_toBottomOf="@+id/user_age" />

    <TextView
        android:id="@+id/user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Age: "
        app:layout_constraintStart_toEndOf="@+id/user_post_image"
        app:layout_constraintTop_toBottomOf="@+id/post_city_text" />


</android.support.constraint.ConstraintLayout>